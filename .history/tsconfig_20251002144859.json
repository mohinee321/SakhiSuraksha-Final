{
  "compilerOptions": {
    // Module system for Node.js + ESM
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",

    // âœ… Allow default React & Node types
    "types": ["react", "react-dom", "node"],

    // Output settings
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // JSX support for React 17+
    "jsx": "react-jsx",

    // Module-related
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",

    // Speed optimizations
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}


